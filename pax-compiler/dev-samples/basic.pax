@template {
    <Stacker id="main-stacker">
        <Rectangle id="rect-1" some_binding=@some_binding some_expression=@{ num_clicks % 2 == 0 } />
        <Rectangle id="rect-2" />
        <Rectangle id="rect-5" />
        <Rectangle id="rect-3" />
    </Stacker>
}

@settings {
    #main-stacker {
        cell_count: 3
        orientation: Orientation::Vertical
        gutter_width: 5px
    }

    #rect-1 {
        fill: Color::rgba(100%, 100%, 0, 100%)
        stroke: {
            color: Color::rgba(100%, 0%, 100%, 100%)
            width: 5px
            style: {
                line_join: None
                line_cap: LineCap::Butt
                dash: [5,0,5,0]
            }
        }
    }

    #rect-2 {
        fill: Color::rgba(0,0,100%,100%)
    }
}